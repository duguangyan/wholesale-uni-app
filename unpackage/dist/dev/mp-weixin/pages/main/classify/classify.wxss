.classify {
  background: #fff;
  height: 100vh;
  border-top: 1rpx solid #E6E6E6;
}
.classify .left {
    width: 180rpx;
    height: 100%;
    background: #F5F5F5;
}
.classify .left .items .item {
      font-size: 28rpx;
      color: #333;
      text-align: center;
      height: 90rpx;
      line-height: 90rpx;
      position: relative;
}
.classify .left .items .active {
      background: #fff !important;
      color: #FE3B0B !important;
}
.classify .left .items .active:after {
      content: " ";
      width: 8rpx;
      height: 40rpx;
      display: block;
      background: #FE3B0B;
      position: absolute;
      left: 0;
      top: 25rpx;
}
.classify .content {
    width: 520rpx;
    font-size: 30rpx;
    color: #666;
}
.classify .content .tips, .classify .content .all {
      width: 520rpx;
      height: 70rpx;
      line-height: 70rpx;
      font-size: 28rpx;
      color: #333;
      margin: 20rpx  0 0 20rpx;
}
.classify .content .all view {
      width: 150rpx;
      height: 70rpx;
      line-height: 70rpx;
      text-align: center;
      border: 1rpx solid #E6E6E6;
}
.classify .content .items .item {
      width: 150rpx;
      height: 70rpx;
      line-height: 70rpx;
      text-align: center;
      border: 1rpx solid #E6E6E6;
      margin: 20rpx 0 20rpx 20rpx;
}
.classify .right {
    position: relative;
    top: 120rpx;
}
.classify .right .item {
      font-size: 20rpx;
      color: #333;
      width: 40rpx;
      text-align: center;
      height: 34rpx;
      line-height: 34rpx;
}

